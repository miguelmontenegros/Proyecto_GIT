public class OperacionesMatematicas {

    public static void main(String[] args) {
        int numeroPrimo = 17;
        double numeroRaiz = 25;

        System.out.println("¿Es " + numeroPrimo + " primo?: " + verificarPrimo(numeroPrimo));
        System.out.println("La raíz de " + numeroRaiz + " es: " + calcularRaiz(numeroRaiz));
    }
    public static boolean verificarPrimo(int n) {
        if (n <= 1) return false; // 0 y 1 no son primos

        // Ciclo hasta n/2 como pediste
        for (int i = 2; i <= n / 2; i++) {
            if (n % i == 0) {
                return false; // Si es divisible por alguien, no es primo
            }
        }
        return true;
    }
    public static double calcularRaiz(double n) {
        if (n < 0) return Double.NaN; // No hay raíces reales de negativos
        if (n == 0) return 0;

        double x = n; // Nuestra estimación inicial
        double error = 0.000001; // Nivel de precisión deseado

        // Mientras la diferencia entre x*x y n sea mayor al error...
        while (Math.abs(x * x - n) > error) {
            x = (x + n / x) / 2.0; // Aplicamos la fórmula babilónica
        }

        return x;
    }
}
